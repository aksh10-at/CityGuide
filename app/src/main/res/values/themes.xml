<resources>
    <!-- Base application theme. -->
<!--    Bridge it will use both materialComponents Theme and the Theme defined here.-->
    <style name="Theme.CityGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    Menu Style-->
    <style name="ThemeOverlay.AppCompat.navTheme">
        <!--        Color of text and icon when SELECTED-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>

<!--        Not working--> use bridge...
<!--        Color on item Selected-->
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    //login/Signup cursor screen--
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>

</resources>



